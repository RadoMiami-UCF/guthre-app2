<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>

<AnchorPane prefHeight="150.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dialogboxes.DeleteItem">
   <children>
      <StackPane layoutX="25.0" layoutY="20.0" prefHeight="25.0" prefWidth="350.0">
         <children>
            <ComboBox fx:id="itemComboBox" prefWidth="250.0" StackPane.alignment="CENTER_RIGHT" />
            <Label text="Item to delete:" StackPane.alignment="CENTER_LEFT" />
         </children>
      </StackPane>
      <StackPane layoutY="100.0" prefHeight="25.0" prefWidth="400.0">
         <children>
            <Button mnemonicParsing="false" onAction="#deleteItem" prefWidth="100.0" text="Delete Item" StackPane.alignment="CENTER_RIGHT" />
            <Button mnemonicParsing="false" onAction="#closeDialogBox" prefWidth="100.0" text="Cancel" StackPane.alignment="CENTER_LEFT" />
         </children>
         <padding>
            <Insets left="50.0" right="50.0" />
         </padding>
      </StackPane>
   </children>
</AnchorPane>
