<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>

<AnchorPane prefHeight="150.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dialogboxes.SaveMenu">
   <children>
      <StackPane layoutX="25.0" layoutY="20.0" prefWidth="350.0">
         <children>
            <Button mnemonicParsing="false" onAction="#selectFile" prefWidth="250.0" text="You shouldn't be able to read this." StackPane.alignment="CENTER_RIGHT" />
            <TextField fx:id="fileTextField" editable="false" focusTraversable="false" maxWidth="-Infinity" minWidth="-Infinity" mouseTransparent="true" prefWidth="250.0" promptText="Click to select a file." StackPane.alignment="CENTER_RIGHT" />
            <Label text="Save to..." StackPane.alignment="CENTER_LEFT" />
         </children>
      </StackPane>
      <StackPane layoutX="50.0" layoutY="100.0" prefWidth="300.0">
         <children>
            <Button mnemonicParsing="false" onAction="#saveList" prefWidth="100.0" text="Save List" StackPane.alignment="CENTER_RIGHT" />
            <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#closeDialogBox" prefWidth="100.0" text="Cancel" StackPane.alignment="CENTER_LEFT" />
         </children>
      </StackPane>
   </children>
</AnchorPane>
